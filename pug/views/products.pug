doctype 5
html(lang="en")
head
    title Desafío 05 - PUG
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(rel="stylesheet" href="./style.css")
body.bg-black.text-light.container
    h1.text-center Desafío 05:
    div
        h2 Listado de Productos: </h2>
        table.table.w-70
            thead.text-head
                tr
                    th(scope="col").text-center Nombre
                    th(scope="col").text-center Precio
                    th(scope="col").text-center Imagen
            tbody
                each prod in productos
                    tr.text-body
                        td.align-middle.product-list.text-center= prod.title
                        td.align-middle.product-list.text-center= prod.price
                        td
                            img(alt="ProductImg" src=prod.thumbnail).img.rounded.mx-auto.d-block
        a(href="/" role="button").btn.btn-primary.m-3 Home

script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
